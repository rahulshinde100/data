<p id="notice"><%= notice %></p>
<h1><%= @category.title.capitalize %> Category Posts</h1>
<table class = "table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
     
  </tr>
 </thead>
<% @post.each do |post| %>
	<tr>
	<td><%=link_to post.title , category_post_path(post.category,post) %> </td>
	<% description = post.description%>
	<td><%= description %> </td>
	
	
</tr>
<% end %>
</table>

<%= link_to new_category_post_path(@category), class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Post
<% end %>