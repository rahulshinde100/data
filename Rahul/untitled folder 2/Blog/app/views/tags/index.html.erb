          <% end %>
        </td>
        
          <td>

          <%= link_to  edit_tag_path(tag), class: 'btn btn-warning' do %>
          <i class="glyphicon glyphicon-edit"></i> Edit
    <% end %>
</td>


        
        <td>

          <%= link_to  tag, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger btn-xs" do %>
