
<h1><center> =: Product :=</center></h1>

<center><%= link_to 'New Product Entry', 'new' %></center> <br><br>






<br><br><br><br>


<table width='350' >
	<tr>
	<th>Company Name</th>
	<th>Product Name</th>
	<th>Available Quantity</th>
	<th>Price Per Item</th>
</tr>
<%  @product.each do | p | %>
<td><%= p.company_name %></td>
<td><%= p.product_name %></td>
<td><%= p.available_quantity %></td>
<td><%= p.price %></td>
<td><%= link_to 'edit' ,{ :action => "edit",:id => p.id } -%></td>
<td><%= link_to 'delete' ,{:action => 'delete', :id => p.id},
      :confirm => "Are you sure you want to delete this item?" %></td>
</tr>

<% end %>
</table>