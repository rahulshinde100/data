<h1>Listing students</h1>

<table>
  <thead>
    <tr>
      <th>Sname</th>
      <th>Age</th>
      <th>Class</th>
      <th>City</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.sname %></td>
        <td><%= student.age %></td>
        <td><%= student.class %></td>
        <td><%= student.city %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

