<center>
<h1>Listing All Students</h1>
 
<table>
  <tr>
  	<th>Roll No</th>
  	<th> Student Name</th>
  	<th> Class</th>
  	<th> Course Name</th>
    <th> Department Name</th>
   
  </tr>
 
  <% @student.each do |s| %>
    <tr>
    	<td><%= s.id %></td>
    	<td><%= s.name %></td>
    	<td><%= s.std %></td>
    	<td><%= s.course.name %></td>
      <td><%= s.department.name %></td>
     
    </tr>
  <% end %>
</table>
</center>